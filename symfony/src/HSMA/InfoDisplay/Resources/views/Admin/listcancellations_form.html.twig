{# Add news form #}

<!DOCTYPE html>
<html>
<head>

  {% stylesheets
    '../vendor/twbs/bootstrap/dist/css/bootstrap.css'
    '@InfoDisplayBundle/Resources/public/css/custom.css'
    '@InfoDisplayBundle/Resources/public/css/bootstrap-datepicker3.css'
    filter='cssrewrite' %}
  <link rel="stylesheet" href="{{ asset_url }}"/>
  {% endstylesheets %}

  {% javascripts
    '../vendor/components/jquery/jquery.js'
    '../vendor/twbs/bootstrap/dist/js/bootstrap.js'
    '@InfoDisplayBundle/Resources/public/js/bootstrap-datepicker.js'
    output='js/compiled/jqueryandtools.js' %}
  <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}


  <title>Absagen auflisten</title>
</head>

<body>

<div class="container-fluid">
<h1>Absagen auflisten</h1>

    <table class="table table-striped">
        <tr>
            <th>Eingestellt</th>
            <th>Gültig bis</th>
            <th>Text</th>
            <th>&nbsp;</th>
        </tr>

        {% for cancellation in cancellations %}
          <tr>
            <td>{{ cancellation.posted.format('d.m.Y') }}</td>
            <td>{{ cancellation.valid.format('d.m.Y') }}</td>
            <td>{{ cancellation.news.text }}</td>
            <td><button onclick="parent.location='{{ path('cancellation_delete', {'id': cancellation.id } ) }}'">Löschen</button></td>
          </tr>
        {% endfor %}

    </table>

    <a href="{{ path('cancellation_add') }}">Neu hinzufügen</a>
    <br><br>
    <a href="{{ path('logout') }}">Abmelden</a>
</div>
</body>
</html>
