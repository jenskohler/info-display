{# Start page of the application #}
<!DOCTYPE html>
<html>
<head>
    {% stylesheets
      '../vendor/twbs/bootstrap/dist/css/bootstrap.css'
      '@InfoDisplayBundle/Resources/public/css/custom.css'
      '@InfoDisplayBundle/Resources/public/css/bootstrap-datepicker3.css'
      filter='cssrewrite' %}
      <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {% javascripts
      '../vendor/components/jquery/jquery.js'
      '../vendor/twbs/bootstrap/dist/js/bootstrap.js'
      output='js/compiled/jqueryandtools.js' %}
      <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% if reload %}
        <script>
            setTimeout(function(){
                window.location.reload(1);
            }, {{ timeout }});
        </script>
    {% endif %}

  <title>News</title>
</head>
<body>
<div class="container-fluid">
    <h1>News <small>{{ time }}</small></h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Semester</th>
                <th>Information</th>
            </tr>
        </thead>
        <tbody>
        {%  for n in news  %}
            <tr>
                <td>{% if n.semester == null %}
                       Alle
                    {% else %}
                        {{ n.semester }}
                    {% endif %}
                </td>
                <td>{{ n.text }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
</html>
